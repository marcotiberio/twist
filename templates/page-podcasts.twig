{% extends 'templates/_document.twig' %}

{% block content %}
  {# {% for component in post.meta('pageComponents') %}
    {{ renderComponent(component) }}
  {% endfor %} #}
  <ul class="list-podcasts">
    {% for post in podcastlist %}
      <li class="list-podcasts-item">
        <a href="{{ post.link }}">
          <div class="content">
            <p class="title">{{ post.title }}</p>
            {# <p>{{ post.datePost|date("d.m.Y")|escape('wp_kses_post') }}</p> #}
            <div class="featuredImage" style="background-image: url('{{ Image(post.hoverImage).src }}');">
              <img class="figure-image lazyload"
                src="{{ post.thumbnail.src|resize(32) }}"
                data-srcset="{{function('wp_get_attachment_image_srcset', post.thumbnail.id)}}"
                data-sizes="auto">
              {# {{ renderComponent('BlockImage', { image: post.thumbnail, options: { size: 'medium' }, noComponentSpacing: true }) }} #}
            </div>
          </div>
        </a>
      </li>
    {% endfor %}
  </ul>
{% endblock %}
