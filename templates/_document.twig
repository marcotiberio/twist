<!DOCTYPE html>
<html class="html {{ body_class }} page-{{ post.slug }}" id="theTop" lang="{{ site.language }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="alternate" type="application/rss+xml" title="{{ site.title }} {{ __('Feed', 'flynt') }}" href="{{ site.rss2 | e('esc_url') }}">
    {{ function('wp_head') }}
  </head>
  <body>
    <a href="#mainContent" class="skipLink">
      {{ __("Skip to main content", "flynt") }}
    </a>
    {% block layout %}
      <div class="pageWrapper">
        <header class="mainHeader" id="mainHeader">
          {% block header %}
            {{ renderComponent('NavigationMain') }}
            {{ renderComponent('NavigationBurger') }}
          {% endblock %}
        </header>
        <main id="mainContent" class="mainContent" aria-label="{{ __('Content', 'flynt') }}">
          {% if function('post_password_required') %}
            {{ function('get_the_password_form') }}
          {% else %}
            {% block content %}
              No <code>{{ '{% block content %}' }}</code> defined for this template.
            {% endblock %}
          {% endif %}
        </main>
        <section class="accessibility">
          <div class="accessibility-toggle">
            <svg xmlns="http://www.w3.org/2000/svg" width="628.937" height="627.498" viewBox="0 0 628.937 627.498">
              <g id="Group_2" data-name="Group 2" transform="translate(1.561 8.061)">
                <g id="Group_1" data-name="Group 1">
                  <line id="Line_1" data-name="Line 1" x2="870.979" y2="6.364" transform="translate(2 611.375) rotate(-45)" fill="none" stroke="#000" stroke-width="10"/>
                  <line id="Line_2" data-name="Line 2" x2="400" transform="translate(222.375)" fill="none" stroke="#000" stroke-linecap="square" stroke-width="10"/>
                  <line id="Line_3" data-name="Line 3" x2="400" transform="translate(622.375) rotate(90)" fill="none" stroke="#000" stroke-linecap="square" stroke-width="10"/>
                </g>
              </g>
            </svg>
            <span>Accessibility tools</span>
          </div>
          <div class="accessibility-content">
            <div class="accessibility-content--inner fontSizebigger">
              <svg width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg">
