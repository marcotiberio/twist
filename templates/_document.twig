                <path d="M6.59161 6.99734L2.5498 2.72668L2.72547 2.55096L6.99573 6.5946L6.59161 6.99734Z" fill="black"/>
              </svg>
              <span>High contrast</span>
            </div>
          </div>
        </section>
        <footer class="mainFooter">
          {% block footer %}
            {{ renderComponent('BlockNewsletter') }}
            {{ renderComponent('NavigationFooterColumns') }}
          {% endblock %}
        </footer>
      </div>
    {% endblock %}
    <div class="wpFooter">
      {{ function('wp_footer') }}
    </div>
  </body>
</html>
