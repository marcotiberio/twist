<nav is="flynt-navigation-main" class="flyntComponent navMain" aria-label="{{ __("Main", "flynt") }}">
  <div class="wrapper">
    <div class="container">
      <a class="logo" href="{{ site.link }}">
        <img class="logo-image" src="{{ logo.src }}" alt="{{ logo.alt }}">
      </a>
      {% if menu %}
        <ul class="menu">
        {% for item in menu.items %}
          {# regular menu item #}
          {% if not item.children %}
            <li class="menu-item small {{ item.current ? 'menu-item--current' }}">
              <a class="menu-link" href="{{ item.link }}" {{ item.target == '_blank' ? 'target="_blank" rel="noreferrer noopener"' }}>
                {{ item.title }}
              </a>
            </li>
          {% endif %}
          {# menu with submenu item #}
          {% if item.children %}
            <li class="menu-item small open-submenu {{ item.current ? 'menu-item--current' }}">
              <div class="menu-link" data-slug="{{item.slug}}" id="sub-{{item.slug}}" href="{{ item.link }}" {{ item.target == '_blank' ? 'target="_blank" rel="noreferrer noopener"' }}>
                {{ item.title }}
              </div>
              <ul class="menu menu-submenu">
                {% for subitem in item.children %}
                  <li class="menu-item small {{ subitem.current ? 'menu-item--current' }}">
                    <a class="menu-link" href="{{ subitem.link }}">{{ subitem.title }}</a>
                  </li>
                {% endfor %}
              </ul>
            </li>
          {% endif %}
        {% endfor %}
          {# {% for item in menu.items %}
            <li class="menu-item {{ item.current ? 'menu-item--current' }}">
              <a class="menu-link" href="{{ item.link }}" {{ item.target == '_blank' ? 'target="_blank" rel="noopener noreferrer"' }}>{{ item.title }}</a>
            </li>
          {% endfor %} #}
        </ul>
      {% endif %}
      {% if ctaLink.url %}
      <div class="cta">
        <a class="button button--red" href="{{ ctaLink.url }}"{% if ctaLink.target %} target="{{ ctaLink.target }}" rel="noreferrer noopener"{% endif %}>
          {{ ctaLink.title|e }}
        </a>
      </div>
      {% endif %}
      {# {% include 'Partials/_search.twig' %} #}
    </div>
  </div>
</nav>
