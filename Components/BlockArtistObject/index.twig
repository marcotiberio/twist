            {% endif %}
        {% endfor %}
      {% endfor %}
      {% for item in post.meta('artistComponents') %}
        {% if item.acf_fc_layout == 'BlockArtistInfo' %}
          <aside class="notes">{{ item.bioHtml }}</aside>
        {% endif %}
      {% endfor %} #}
      {# {{ renderComponent('BlockArtistInfo', { bioHtml: item.bioHtml, options: { size: 'sizeLarge' } }) }} #}
    </div>
  </div>
  {% endfor %}
</div>
{% endif %}
